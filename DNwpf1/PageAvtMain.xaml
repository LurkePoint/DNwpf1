<Page x:Class="DNwpf1.PageAvtMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DNwpf1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAvtMain">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" Height="40" Width="200" TextAlignment="Center" FontSize="25"></TextBlock>


            <Label x:Name="label" Content="Ваш логин:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
            <TextBox Text="Admin" Name="login" Width="200" FontSize="15" VerticalAlignment="Top" Padding="5"/>


            <Label x:Name="label1" Content="Ваш пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
            <PasswordBox Name="password" Width="200" FontSize="15" VerticalAlignment="Top" Padding="5" Password="7777"/>

            <Button Width="200" Height="30" Content="Войти" Margin="0,5,0,0" Click="Button_Click_Avt"></Button>

        </StackPanel>
    </Grid>
</Page>
